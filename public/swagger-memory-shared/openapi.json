{
    "openapi": "3.0.0",
    "paths": {
        "/api/users": {
            "get": {
                "tags": [
                    "users"
                ],
                "description": "statusがMEMBERもしくはADMINのユーザ情報をページネーション形式で取得する(件数：50件)",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::index",
                "parameters": [
                    {
                        "name": "name@like",
                        "in": "query",
                        "description": "ユーザ名の検索値(あいまい検索に対応)",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "sort_name",
                        "in": "query",
                        "description": "ユーザ名でソート",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "sort_created_at",
                        "in": "query",
                        "description": "作成日時順でソート",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "statusがMEMBERもしくはADMINのユーザデータを返す",
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/user_list"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error_message": {
                                            "description": "サーバエラー用のメッセージを表示",
                                            "type": "string",
                                            "example": "ユーザ情報を取得出来ませんでした"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ]
            },
            "post": {
                "tags": [
                    "users"
                ],
                "description": "ユーザデータを保存する",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::store",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "request": {
                                        "$ref": "#/components/schemas/user_register"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "info_message": {
                                            "description": "保存成功のメッセージを表示",
                                            "type": "string",
                                            "example": "ユーザ情報を登録しました"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error_message": {
                                            "description": "サーバエラー用のメッセージを表示",
                                            "type": "string",
                                            "example": "ユーザ情報の登録に失敗しました"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        },
        "/api/users/{user}": {
            "get": {
                "tags": [
                    "users"
                ],
                "description": "指定したユーザの情報をすべて取得する",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::show",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ユーザID",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/user_detail"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "存在しないユーザのページをリクエストした場合",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error_message": {
                                            "description": "検索結果が0件であることを表すメッセージを表示",
                                            "type": "string",
                                            "example": "指定したユーザは存在しません"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error_message": {
                                            "description": "サーバエラー用のメッセージを表示",
                                            "type": "string",
                                            "example": "ユーザ情報を取得出来ませんでした"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ]
            },
            "put": {
                "tags": [
                    "users"
                ],
                "description": "ユーザデータを更新保存する",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::update",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ユーザID",
                        "required": true,
                        "type": "string"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "request": {
                                        "$ref": "#/components/schemas/user_update"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "info_message": {
                                            "description": "保存成功のメッセージを表示",
                                            "type": "string",
                                            "example": "ユーザ情報を登録しました"
                                        },
                                        "edituser": {
                                            "$ref": "#/components/schemas/user_update"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error_message": {
                                            "description": "サーバエラー用のメッセージを表示",
                                            "type": "string",
                                            "example": "ユーザ情報の登録に失敗しました"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ]
            },
            "delete": {
                "tags": [
                    "users"
                ],
                "description": "ユーザデータを論理削除する",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::destroy",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ユーザID",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "info_message": {
                                            "description": "論理削除成功のメッセージを表示",
                                            "type": "string",
                                            "example": "退会が完了しました"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error_message": {
                                            "description": "サーバエラー用のメッセージを表示",
                                            "type": "string",
                                            "example": "サーバーエラーにより退会に失敗しました。管理者にお問い合わせください"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        },
        "api/users/{user}/edit": {
            "get": {
                "tags": [
                    "users"
                ],
                "description": "編集対象のユーザ情報を取得する",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::edit",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ユーザID",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/user_detail"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error_message": {
                                            "description": "サーバエラー用のメッセージを表示",
                                            "type": "string",
                                            "example": "ユーザ情報を取得出来ませんでした"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        },
        "/api/validate": {
            "post": {
                "tags": [
                    "users"
                ],
                "description": "ユーザ新規登録時のバリデーションを実行する",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::webValidate",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "request": {
                                        "$ref": "#/components/schemas/user_register"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "validate_status": {
                                            "description": "バリデーションチェック通過のメッセージをリターン",
                                            "type": "string",
                                            "example": "OK"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "$ref": "#/components/schemas/errors"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        },
        "api/users/validate": {
            "post": {
                "tags": [
                    "users"
                ],
                "description": "ユーザ更新時のバリデーションを実行する",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::userValidate",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "request": {
                                        "$ref": "#/components/schemas/user_update"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "validate_status": {
                                            "description": "バリデーションチェック通過のメッセージをリターン",
                                            "type": "string",
                                            "example": "OK"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "$ref": "#/components/schemas/errors"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "user_list": {
                "required": [
                    "id",
                    "name",
                    "hobby",
                    "gender",
                    "description",
                    "status",
                    "image_file"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "test1"
                    },
                    "hobby": {
                        "type": "string",
                        "example": "野球観戦"
                    },
                    "gender": {
                        "type": "integer",
                        "example": "0"
                    },
                    "description": {
                        "type": "string",
                        "example": "仲良くしましょう！よろしく！"
                    },
                    "status": {
                        "type": "integer",
                        "example": "1"
                    },
                    "image_file": {
                        "type": "string",
                        "example": "xxxxoooo.png"
                    }
                },
                "type": "object"
            },
            "user_detail": {
                "required": [
                    "id",
                    "name",
                    "hobby",
                    "gender",
                    "description",
                    "email",
                    "status",
                    "image_file"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "test1"
                    },
                    "hobby": {
                        "type": "string",
                        "example": "野球観戦"
                    },
                    "gender": {
                        "type": "integer",
                        "example": "0"
                    },
                    "description": {
                        "type": "string",
                        "example": "仲良くしましょう！よろしく！"
                    },
                    "email": {
                        "type": "string",
                        "example": "test1@xxx.co.jp"
                    },
                    "status": {
                        "type": "integer",
                        "example": "1"
                    },
                    "image_file": {
                        "type": "string",
                        "example": "xxxxoooo.png"
                    }
                },
                "type": "object"
            },
            "user_register": {
                "required": [
                    "name",
                    "email",
                    "password",
                    "password_confirmation",
                    "user_agent",
                    "image_file"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "test1"
                    },
                    "email": {
                        "type": "string",
                        "example": "test1@xxx.co.jp"
                    },
                    "password": {
                        "type": "string",
                        "example": "test1234"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "example": "test1234"
                    },
                    "user_agent": {
                        "type": "string",
                        "example": "Mozilla/5.0 (Macintosh; U; Intel Mac OS X 10_8_8) AppleWebKit/5330 (KHTML, like Gecko) Chrome/36.0.833.0 Mobile Safari/5330"
                    },
                    "image_file": {
                        "type": "string",
                        "example": "xxxxoooo.png"
                    }
                },
                "type": "object"
            },
            "user_update": {
                "required": [
                    "id",
                    "name",
                    "email",
                    "password",
                    "password_confirmation",
                    "hobby",
                    "gender",
                    "description",
                    "user_agent",
                    "image_file"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "test1"
                    },
                    "email": {
                        "type": "string",
                        "example": "test1@xxx.co.jp"
                    },
                    "password": {
                        "type": "string",
                        "example": "test1234"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "example": "test1234"
                    },
                    "hobby": {
                        "type": "string",
                        "example": "野球観戦"
                    },
                    "gender": {
                        "type": "integer",
                        "example": "0"
                    },
                    "description": {
                        "type": "string",
                        "example": "仲良くしましょう！よろしく！"
                    },
                    "user_agent": {
                        "type": "string",
                        "example": "Mozilla/5.0 (Macintosh; U; Intel Mac OS X 10_8_8) AppleWebKit/5330 (KHTML, like Gecko) Chrome/36.0.833.0 Mobile Safari/5330"
                    },
                    "image_file": {
                        "type": "string",
                        "example": "xxxxoooo.png"
                    }
                },
                "type": "object"
            },
            "errors": {
                "required": [
                    "name",
                    "email",
                    "password",
                    "password_confirmation",
                    "image_file"
                ],
                "properties": {
                    "name": {
                        "required": [
                            "unique",
                            "name.max"
                        ],
                        "properties": {
                            "unique": {
                                "type": "string",
                                "example": "このユーザ名はすでに使用されています"
                            },
                            "name.max": {
                                "type": "string",
                                "example": "ユーザ名は15文字以内で入力してください"
                            }
                        },
                        "type": "object"
                    },
                    "email": {
                        "required": [
                            "email",
                            "email.regex"
                        ],
                        "properties": {
                            "email": {
                                "type": "string",
                                "example": "メールアドレスの書式のみ有効です"
                            },
                            "email.regex": {
                                "type": "string",
                                "example": "@以前は半角英数字で入力してください"
                            }
                        },
                        "type": "object"
                    },
                    "password": {
                        "required": [
                            "confirmed",
                            "password.regex"
                        ],
                        "properties": {
                            "confirmed": {
                                "type": "string",
                                "example": "パスワードを確認用と一致させてください"
                            },
                            "password.regex": {
                                "type": "string",
                                "example": "パスワードは半角英数字及び「_@!?#%&」の記号のみで入力してください"
                            }
                        },
                        "type": "object"
                    },
                    "password_confirmation": {
                        "required": [
                            "password_confirmation.regex"
                        ],
                        "properties": {
                            "password_confirmation.regex": {
                                "type": "string",
                                "example": "パスワード（確認）は半角英数字及び「_@!?#%&」の記号のみで入力してください"
                            }
                        },
                        "type": "object"
                    },
                    "image_file": {
                        "required": [
                            "mimes",
                            "image_file.max"
                        ],
                        "properties": {
                            "mimes": {
                                "type": "string",
                                "example": "アップロードファイルはjpeg,png,jpg,gifタイプのみ有効です"
                            },
                            "image_file.max": {
                                "type": "string",
                                "example": "1Mを超えています。"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        }
    }
}