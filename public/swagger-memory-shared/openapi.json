{
    "openapi": "3.0.0",
    "paths": {
        "/api/users": {
            "get": {
                "tags": [
                    "users"
                ],
                "description": "statusがMEMBERのユーザ情報をすべて取得する",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::index",
                "parameters": [
                    {
                        "name": "name@like",
                        "in": "query",
                        "description": "ユーザ名の検索値(あいまい検索に対応)",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "メールアドレスの検索値(あいまい検索に対応)",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "sort_name",
                        "in": "query",
                        "description": "ユーザ名でソート",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "statusがMEMBERのユーザデータを返す",
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error_message": {
                                            "description": "サーバエラー用のメッセージを表示",
                                            "type": "string",
                                            "example": "ユーザ情報を取得出来ませんでした"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        },
        "/api/users/{ユーザ名}": {
            "get": {
                "tags": [
                    "users"
                ],
                "description": "指定したユーザの情報をすべて取得する",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::show",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ユーザ名",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success (存在するユーザかつステータスがMEMBERのユーザデータを返す)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "description": "ユーザID",
                                            "type": "integer",
                                            "example": "1"
                                        },
                                        "name": {
                                            "description": "ユーザ名",
                                            "type": "string",
                                            "example": "root"
                                        },
                                        "email": {
                                            "description": "メールアドレス",
                                            "type": "string",
                                            "example": "root@xxx.co.jp"
                                        },
                                        "status": {
                                            "description": "ステータス",
                                            "type": "integer",
                                            "example": "1"
                                        },
                                        "image_file": {
                                            "description": "プロフィール画像のファイル名",
                                            "type": "string",
                                            "example": "xxxxoooo.png"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "存在しないユーザのページをリクエストした場合",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error_message": {
                                            "description": "検索結果が0件であることを表すメッセージを表示",
                                            "type": "string",
                                            "example": "指定したユーザは存在しません"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error_message": {
                                            "description": "サーバエラー用のメッセージを表示",
                                            "type": "string",
                                            "example": "ユーザ情報を取得出来ませんでした"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        }
    }
}